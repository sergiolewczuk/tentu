{% extends 'layouts/metronic.html.twig' %}

{% block title %}Cliente - Editar Datos {% endblock %}

{% block body %}
<div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title  m-subheader__title--separator">
                    Editar los datos de mi perfil
                </h3>
            </div>
        </div>
    </div>
    <div class="m-content">
        <!--Begin::Section-->
        <div class="row">
            <div class="col-xl-12">
                    <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height ">
                            <div class="m-portlet__head">
                                <div class="m-portlet__head-caption">
                                    <div class="m-portlet__head-title">
                                        <h3 class="m-portlet__head-text">
                                            Por favor modifique los datos y guarde sus cambios
                                        </h3>
                                    </div>
                                </div>
                                <div class="m-portlet__head-tools">
                                    <a href="{{ url('cliente_perfil') }}" class="btn btn-outline-danger m-btn m-btn--icon m- m-btn--outline-2x">Cancelar <i class="la la-times-circle"></i></a>
                                </div>
                            </div>
                            <div class="m-portlet__body">
                                <!--begin::Section-->
                               
                                        <div class="m-section">
                                                <div class="m-section__content">
                                                    {{ form_start(form) }}
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.nombre, 'Nombre') }}
                                                            {{ form_errors(form.nombre) }}
                                                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.apellido, 'Apellido') }}
                                                            {{ form_errors(form.apellido) }}
                                                            {{ form_widget(form.apellido, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.dni, 'DNI') }}
                                                            {{ form_errors(form.dni) }}
                                                            {{ form_widget(form.dni, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.correo, 'Correo') }}
                                                            {{ form_errors(form.correo) }}
                                                            {{ form_widget(form.correo, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.telefono, 'Telefono') }}
                                                            {{ form_errors(form.telefono) }}
                                                            {{ form_widget(form.telefono, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                    {{ form_end(form) }}
                                                </div>
                                        </div>
                            </div>
                    </div>
            </div>
        </div>
    </div>
</div>
                                            
    
{% endblock %}