{% extends 'layouts/metronic.html.twig' %}

{% block title %}Historia Alimentaria - Editar{% endblock %}

{% block body %}
<div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title  m-subheader__title--separator">
                    Crear Historia Alimentaria
                </h3>
            </div>
        </div>
    </div>
    <div class="m-content">
        <!--Begin::Section-->
        <div class="row">
            <div class="col-xl-12">
                    <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height ">
                            <div class="m-portlet__head">
                                <div class="m-portlet__head-caption">
                                    <div class="m-portlet__head-title">
                                        <h3 class="m-portlet__head-text">
                                            Cargue los valores en los campos de texto
                                        </h3>
                                    </div>
                                </div>
                                <div class="m-portlet__head-tools">
                                    <a href="{{ url('ficha') }}" class="btn btn-outline-danger m-btn m-btn--icon m- m-btn--outline-2x">Cancelar <i class="la la-times-circle"></i></a>
                                </div>
                            </div>
                            <div class="m-portlet__body">
                                <!--begin::Section-->
                               
                                        <div class="m-section">
                                                <div class="m-section__content">
                                                    {{ form_start(form) }}
                                                        <small style="color: red;">* Complete con los horarios que habitualmente come o le quedearia comodo comer</small>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.unaHoraDesayuno, 'Horario Desayuno') }}
                                                            {{ form_errors(form.unaHoraDesayuno) }}
                                                            {{ form_widget(form.unaHoraDesayuno, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.unaHoraAlmuerzo, 'Horario Almuerzo') }}
                                                            {{ form_errors(form.unaHoraAlmuerzo) }}
                                                            {{ form_widget(form.unaHoraAlmuerzo, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.unaHoraMerienda, 'Horario Merienda') }}
                                                            {{ form_errors(form.unaHoraMerienda) }}
                                                            {{ form_widget(form.unaHoraMerienda, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.unaHoraCena, 'Horario Cena') }}
                                                            {{ form_errors(form.unaHoraCena) }}
                                                            {{ form_widget(form.unaHoraCena, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <small style="color: red;">* En caso de ser mas de un alimento separar con comas</small>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.unAgua, 'Ingesta de Agua') }}
                                                            {{ form_errors(form.unAgua) }}
                                                            {{ form_widget(form.unAgua, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.alimentoFavorito, 'Alimentos Favoritos') }}
                                                            {{ form_errors(form.alimentoFavorito) }}
                                                            {{ form_widget(form.alimentoFavorito, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.alimentoRechazado, 'Alimentos Rechazados') }}
                                                            {{ form_errors(form.alimentoRechazado) }}
                                                            {{ form_widget(form.alimentoRechazado, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.alergiaIntolerancia, 'Alergias o Intolerancias') }}
                                                            {{ form_errors(form.alergiaIntolerancia) }}
                                                            {{ form_widget(form.alergiaIntolerancia, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                        <div class="form-group m-form__group">
                                                            {{ form_label(form.otrasAclaraiones, 'Otras Aclaraciones') }}
                                                            {{ form_errors(form.otrasAclaraiones) }}
                                                            {{ form_widget(form.otrasAclaraiones, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                    {{ form_end(form) }}
                                                </div>
                                        </div>
                            </div>
                    </div>
            </div>
        </div>
    </div>
</div>
                                            
    
{% endblock %}